<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 직업명 -->
        <TextView
            android:id="@+id/txtJobTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="빙결술사"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- 스킬 구성 -->
        <TextView android:text="스킬 개조" style=
            "@style/TextAppearance.MaterialComponents.Body1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipSkillGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleLine="true"
            app:chipSpacing="8dp"/>

        <!-- 룬 추천 섹션 -->
        <TextView android:text="룬 추천"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">

            <TextView android:text="무기" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipWeaponGroup"
                app:chipSpacing="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView android:text="방어구" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipArmorGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView android:text="엠블럼" android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipEmblemGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- 콤보 섹션 -->
        <TextView android:text="콤보 및 사이클" android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/linearCombo"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"/>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
